<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".ProductsActivity">

    <!-- Верхний блок -->
    <LinearLayout
        android:id="@+id/topBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <!-- Первая строка -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/drinksButton"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/border"
                android:text="Напитки"
                android:textColor="@android:color/black"
                android:padding="10dp" />

            <Button
                android:id="@+id/hotButton"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/border"
                android:text="Горячее"
                android:textColor="@android:color/black"
                android:padding="10dp" />
        </LinearLayout>

        <!-- Вторая строка -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/bakeryButton"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/border"
                android:text="Выпечка"
                android:textColor="@android:color/black"
                android:padding="10dp" />

            <Button
                android:id="@+id/sweetsButton"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/border"
                android:text="Сладости"
                android:textColor="@android:color/black"
                android:padding="10dp" />
        </LinearLayout>

        <!-- Третья строка -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/snacksButton"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/border"
                android:text="Снеки"
                android:textColor="@android:color/black"
                android:padding="10dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Нижние кнопки -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border"
            android:text="Назад"
            android:textColor="@android:color/black"
            android:padding="10dp" />

        <Button
            android:id="@+id/qrButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border"
            android:text="QR"
            android:textColor="@android:color/black"
            android:padding="10dp" />

        <Button
            android:id="@+id/cartButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/border"
            android:text="Корзина"
            android:textColor="@android:color/black"
            android:padding="10dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
